@model ProductTrack.Models.Entity.TBL_Products
@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post">
    <div class="form-group">
        <label for="product-name">Product Name:</label>
        <input id="product-name" type="text" class="form-control" name="ProductName">
        @Html.ValidationMessageFor(p => p.ProductName, "", new { @style = "color: red" })
    </div>
    <div class="form-group">
        <label for="product-price">Product Price:</label>
        <input id="product-price" type="number" class="form-control" name="ProductPrice">
        @Html.ValidationMessageFor(p => p.ProductPrice, "", new { @style = "color: red" })
    </div>
    <div class="form-group">
        <label for="product-category">Product Category:</label>
          @Html.DropDownListFor(p => p.TBL_Categories.CategoryID, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control", @id = "product-category" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span>
            &nbsp;Add
        </button>
    </div>
</form>

