@using ProductTrack.Models.Entity
@model List<TBL_Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr class="success">
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Category Status</th>
        <th>Pacify/Update</th>
    </tr>
    <tbody>
        @foreach (TBL_Categories category in Model)
        {
            if (category.CategoryStatus == true)
            {
                <tr class="success">
                    <td>@category.CategoryID</td>
                    <td>@category.CategoryName</td>
                    <td>@category.CategoryStatus</td>
                    <td>
                        <a href="~/Category/PacifyCategory/@category.CategoryID" class="btn btn-danger"><span class="glyphicon glyphicon-ban-circle"></span></a>
                        <a href="~/Category/LoadCategory/@category.CategoryID" class="btn btn-warning"><span class="glyphicon glyphicon-refresh"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a href="~/Category/AddNewCategory" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp; New Category</a>
<table class="table table-bordered table-hover" style="margin-top:2em">
    <tr class="danger">
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Category Status</th>
        <th>Activate/Update</th>
    </tr>
    <tbody>
        @foreach (TBL_Categories category in Model)
        {
            if (category.CategoryStatus == false)
            {
                <tr class="danger">
                    <td>@category.CategoryID</td>
                    <td>@category.CategoryName</td>
                    <td>@category.CategoryStatus</td>
                    <td>
                        <a href="/Category/ActivateCategory/@category.CategoryID" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span></a>
                        <a href="/Category/LoadCategory/@category.CategoryID" class="btn btn-warning"><span class="glyphicon glyphicon-refresh"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>