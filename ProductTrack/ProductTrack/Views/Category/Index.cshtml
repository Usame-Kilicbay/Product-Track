@using ProductTrack.Models.Entity
@model List<TBL_Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Operation</th>
    </tr>
    <tbody>
        @foreach (TBL_Categories category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="~/Category/Pacify/@category.CategoryID" class="btn btn-danger"><span class="glyphicon glyphicon-ban-circle"></span></a>
                    <a href="~/Category/Update/@category.CategoryID" class="btn btn-primary"><span class="glyphicon glyphicon-refresh"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="~/Category/AddNewCategory" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp; New Category</a>
