@model ProductTrack.Models.Entity.TBL_Categories
@{
    ViewBag.Title = "LoadCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.CategoryID)
        @Html.TextBoxFor(c => c.CategoryID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.CategoryName)
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning" type="submit"><span class="glyphicon glyphicon-refresh"></span>&nbsp; Update</button>
    </div>
}